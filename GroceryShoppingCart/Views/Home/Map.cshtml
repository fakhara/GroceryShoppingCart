
@{
    ViewBag.Title = "Map";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Store Location</h2>

<style>
    /*Alway set the map height explicity todefine the size of the div element that contain the map.*/
    #map {
        height: 400px;
        width: 100%;
    }
</style>
<div class="row">
    <div id="map"></div>
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 56.879004, lng: 14.805852 },
                zoom: 16
            });
            var marker = new google.maps.Marker({
                position: { lat: 56.879004, lng: 14.805852 },
                    map: map
            });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAfo5JDDmzizfqGiFog3IRtBYAShbKvQUI&callback=initMap" async defer></script>
