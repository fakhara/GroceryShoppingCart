<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GroceryShoppingCart</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="bs-component">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GroceryStore", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                     {
                       <li class="dropdown">
                      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                      Admin Area
                      <span class="caret"></span>
                      </a>
                         <ul class="dropdown-menu">
                         <li>@Html.ActionLink("Catagories", "Index", "Catagories")</li>
                         <li>@Html.ActionLink("Products", "Products", "Products")</li>
                         <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                         </ul>
                      </li>
                     }
                      <li>@Html.ActionLink("Products", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            About us
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group"> <input type="text" class="form-control" placeholder="Search"> </div> <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                </form>
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="@Url.Action("Myorder", "ShoppingCart")">
                            <span class="glyphicon glyphicon-shopping-cart" style="color:green"></span>Cart <span class="badge">@Session["count"]</span>
                        </a>
                    </li>
                </ul>

                 @Html.Partial("_LoginPartial")
           </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <br />
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year - GroceryShoppingCart by FakharaImran</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
