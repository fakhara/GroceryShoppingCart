            @foreach(var product in Model.Products)
             {
                <div class="col-xs-12 col-md-3">
                <div class="thumbnail">
                    <img class="img-responsive" src="~/Images/Uploads/Products//@product.Id/Thumbs/@product.ImageName" style="overflow:hidden;position:relative;width:100px;height:100px;cursor:pointer" />
